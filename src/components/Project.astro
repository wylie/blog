---
const { link, title, description, skills } = Astro.props;
import '../pages/variables.css';

---

<article class="project">
  <a href={link} class="link" target="_blank" rel="noreferrer" title={title}>
    <h3 class="title">
      {title}
      <p class="url">{link}</p>
    </h3>
    <p class="description">{description}</p>
    <p class="skills">
      {skills}
      <!-- {
        skills.map((skill, index) => (
          <span class="skill" key={index}>{skill}</span>
        ))
      } -->
    </p>
  </a>
</article>

<style>
  .project {
    display: grid;
    padding: 1rem;
    background: var(--background-contrast-color);
    transition: all .1s;
  }
  .project .link {
    text-decoration: none;
    display: flex;
    flex-direction: column;
  }
  .project .title {
    border-bottom: 5px solid var(--background-color);
    width: 100%;
    margin-bottom: 1rem;
    padding-bottom: .5rem;
    transition: all 1s;
    position: relative;
  }
  .project .url {
    font-weight: normal;
    font-size: 12px;
    font-style: italic;
    margin-top: .5rem;
  }
  .project .link:hover .url {
    text-decoration: underline;
  }
  .description {
    font-size: var(--fontSize-secondary);
    flex: 1 1 100%;
  }
  .project .project .skills {
    font-weight: normal;
    font-size: 12px;
    margin-top: 1rem;
  }
